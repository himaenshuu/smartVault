# SmartVault Environment Variables
# Copy this file to .env.local for local development
# For Vercel deployment, add these as environment variables in your Vercel dashboard

# Appwrite Configuration
# Get these values from your Appwrite console (https://cloud.appwrite.io)

# Appwrite Endpoint URL (usually https://cloud.appwrite.io/v1)
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1

# Your Appwrite Project ID
NEXT_PUBLIC_APPWRITE_PROJECT=your_project_id_here

# Your Appwrite Database ID
NEXT_PUBLIC_APPWRITE_DATABASE=your_database_id_here

# Your Appwrite Users Collection ID
NEXT_PUBLIC_APPWRITE_USERS_COLLECTION=your_users_collection_id_here

# Your Appwrite Files Collection ID  
NEXT_PUBLIC_APPWRITE_FILES_COLLECTION=your_files_collection_id_here

# Your Appwrite Storage Bucket ID
NEXT_PUBLIC_APPWRITE_BUCKET=your_bucket_id_here

# Your Appwrite Server API Key (Keep this secret - do not expose publicly)
NEXT_APPWRITE_KEY=your_server_api_key_here

# Optional: Google Generative AI API Key for AI features
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_api_key_here

# Optional: Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1